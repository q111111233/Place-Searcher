@model IEnumerable<PlaceSearch.Models.Comment>

@{
    ViewData["Title"] = "Comment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<hr />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Place.PlaceName)
        </th>
        <th></th>
    </tr>

    @foreach (var listComment in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelComment => listComment.Description)
            </td>
            <td>
                @Html.DisplayFor(modelComment => listComment.Place.PlaceName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = listComment.CommentId }) |
                @Html.ActionLink("Details", "Details", new { id = listComment.CommentId }) |
                @Html.ActionLink("Delete", "Delete", new { id = listComment.CommentId })
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Create New", "Create")
</p>

<h2>list of comments</h2>
<button class="comment-list">show all your comments</button>
<div id="comment-list"></div>

<script type="text/javascript">
    $(document).ready(function () {

        $('.comment-list').click(function (event) {
            event.preventDefault();
            $.ajax({
                url: '@Url.Action("CommentList")',
                type: 'GET',
                data: $(this).serialize(),
                dataType: 'json',
                success: function (result) {
                    var stringResult = '<ul>';
                    for (var i = 0; i < result.length; i++) {
                        stringResult += '<li>' + 'Description: ' + result[i].description + '</li>';
                    }
                    stringResult += '</ul>';
                    $('#comment-list').html(stringResult);
                }
            });
        });
    });
</script>